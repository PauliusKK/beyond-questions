mixin table-row(rowClass, number, description, mode, length, watchedPercentage)

    tr(class=rowClass)
        td.number
            span.text #{number}
            span.icon-icon-approved
        td.description #{description}
        td.mode #{mode}
        td.play-icon: span.icon-video-icon
        td.length #{length} min
        td.watched-percentage #{watchedPercentage}%
        td.favorite-star: span.icon-icon-star

mixin table-row-locked(number, description, textInSpan, mode, length, watchedPercentage)

    tr.locked.md-trigger
        td.number
            span.text #{number}
            span.icon-icon-lock
        td.description #{description} <span class="additional-text">#{textInSpan}</span> <span class="icon-icon-question-mark"></span>
        td.mode #{mode}
        td.play-icon: span.icon-video-icon
        td.length #{length} min
        td.watched-percentage: span #{watchedPercentage}%
        td.favorite-star: span.icon-icon-star

