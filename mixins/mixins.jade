mixin checkbox-label(text)
    label.checkbox-label
        input(type="checkbox")
        span.checkbox
        span.text #{text}

mixin input-field(id, type, labelText)
    .input-field(id=id)
        input.validate(id=id, name=id, type=type)
        label(for=id) #{labelText}

